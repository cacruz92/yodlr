{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://your-company.com/userSignup.schema.json",
    "type": "object",
    "properties": {
      "email": {
        "type": "string",
        "format": "email"
      },
      "firstName": {
        "type": "string",
        "minLength": 1
      },
      "lastName": {
        "type": "string",
        "minLength": 1
      }
    },
    "additionalProperties": false,
    "required": ["email", "firstName", "lastName"]
  }